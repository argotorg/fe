use ingot::ctrl::{functor::Functor, function::Fn}
use ingot::data::{option::Option, tuple::Tuple}

impl Functor for Option {
    fn fmap<Source, Target, Morph>(self: Self<Source>, morph: Morph) -> Self<Target>
    where Morph: Fn<1, (Source), Target>, (Source): Tuple<1>
    {
        match self {
            Self::Some(self) => Self::pure<Target>(value: morph.exec(args: (self, )))
            Self::None => Self::None
        }
    }
}
