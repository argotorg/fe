fn lit_if() -> i32 {
    if true {
        1
    } else {
        2
    }
}

fn string_if() -> String<5> {
    if true {
        "1"
    } else {
        "Foo"
    }
}

// If expression should be typed as `()` when else block doesn't exist.
fn no_else() -> () {
    let x = if true {
        false
    }
}

// `if let` without `else` should follow the same typing rule as plain `if`:
// the expression itself has `()` type, while the then branch can be non-unit.
fn no_else_if_let(opt: Option<i32>) -> () {
    if let Option::Some(v) = opt {
        v
    }
}

fn block_condition() -> i32 {
    if { true } {
        1
    } else {
        2
    }
}

fn else_if(b1: bool, b2: bool) -> i32 {
    if b1 {
        1
    } else if b2 {
        2
    } else {
        3
    }
}

fn nested(b1: bool, b2: bool) -> String<10> {
    if b1 {
        "Foo"
    } else {
        if b2 {
            "Bar"
        } else {
            "Baz"
        }
    }
}
