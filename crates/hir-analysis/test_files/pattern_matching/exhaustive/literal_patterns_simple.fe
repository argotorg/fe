// Simple literal pattern tests for debugging

// Test basic boolean literals
fn test_bool_simple(b: bool) -> u8 {
    match b {
        true => 1
        false => 0
    }
}

// Test simple u8 literals
fn test_u8_simple(x: u8) -> u8 {
    match x {
        0 => 10
        1 => 11
        _ => 99
    }
}

// Test tuple with boolean and u8 literal
fn test_tuple_simple(data: (bool, u8)) -> u8 {
    match data {
        (true, 0) => 5
        (true, 1) => 4
        (false, 0) => 3
        (false, 1) => 2
        _ => 1
    }
}

// Test boolean tuple exhaustive
fn test_bool_tuple_exhaustive(pair: (bool, bool)) -> u8 {
    match pair {
        (true, true) => 4
        (true, false) => 3
        (false, true) => 2
        (false, false) => 1
    }
}