use std::evm::effects::assert
use core::ops::{
    SaturatingAdd, SaturatingMul, SaturatingSub, WrappingAdd, WrappingMul, WrappingSub,
}

#[test]
fn test_checked_arithmetic_no_overflow() {
    let a: u8 = 1
    let b: u8 = 2
    assert(a + b == 3)
    assert(a * b == 2)
    assert(b - a == 1)
}

#[test]
fn test_wrapping_and_saturating_u8() {
    let max: u8 = 255
    let zero: u8 = 0
    let sixteen: u8 = as_u8(16)

    assert(max.wrapping_add(1) == 0)
    assert(zero.wrapping_sub(1) == 255)
    assert(sixteen.wrapping_mul(sixteen) == 0)

    assert(max.saturating_add(1) == 255)
    assert(zero.saturating_sub(1) == 0)
    assert(sixteen.saturating_mul(sixteen) == 255)
}

fn as_u8(_ x: u8) -> u8 { x }
